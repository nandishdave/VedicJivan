# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=VedicJivan

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/vedicjivan?retryWrites=true&w=majority

# Auth (Auth.js v5)
AUTH_SECRET=  # Generate with: openssl rand -base64 32
AUTH_URL=http://localhost:3000
